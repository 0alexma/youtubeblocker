{
  "manifest_version": 3,
  "name": "YouTube Focus Helper",
  "version": "1.0",
  "description": "Hide YouTube distractions and add focus overlay",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}